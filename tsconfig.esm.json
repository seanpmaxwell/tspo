{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist/esm",
    "declaration": false,
    "removeComments": true,
    "pretty": false,
    "noEmit": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts",
  ]
}